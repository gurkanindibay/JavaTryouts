{
  "dashboard": {
    "id": null,
    "title": "System & Resource Monitoring",
    "tags": ["system", "resources", "disk", "cpu", "collections-challenge"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System CPU Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "system_cpu_usage{application=\"collections-kafka-challenge\"} * 100",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Process CPU Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "process_cpu_usage{application=\"collections-kafka-challenge\"} * 100",
            "legendFormat": "Process CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 70}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "System CPU Count",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "system_cpu_count{application=\"collections-kafka-challenge\"}",
            "legendFormat": "CPU Cores"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Process Start Time",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "process_start_time_seconds{application=\"collections-kafka-challenge\"} * 1000",
            "legendFormat": "Start Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dateTimeFromNow",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 5,
        "title": "CPU Usage Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "system_cpu_usage{application=\"collections-kafka-challenge\"} * 100",
            "legendFormat": "System CPU %"
          },
          {
            "expr": "process_cpu_usage{application=\"collections-kafka-challenge\"} * 100",
            "legendFormat": "Process CPU %"
          }
        ],
        "yAxes": [
          {"label": "CPU Usage (%)", "unit": "percent", "min": 0, "max": 100},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Disk Space Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "disk_free_bytes{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Free Space"
          },
          {
            "expr": "disk_total_bytes{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Total Space"
          },
          {
            "expr": "disk_total_bytes{application=\"collections-kafka-challenge\"} - disk_free_bytes{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Used Space"
          }
        ],
        "yAxes": [
          {"label": "Disk Space", "unit": "bytes", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 7,
        "title": "Disk Usage Percentage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "(disk_total_bytes{application=\"collections-kafka-challenge\"} - disk_free_bytes{application=\"collections-kafka-challenge\"}) / disk_total_bytes{application=\"collections-kafka-challenge\"} * 100",
            "legendFormat": "Disk Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Available Disk Space",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "disk_free_bytes{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Free Space"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 9,
        "title": "Executor Thread Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "executor_active_threads{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Active Threads"
          },
          {
            "expr": "executor_pool_size_threads{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Pool Size"
          },
          {
            "expr": "executor_pool_core_threads{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Core Threads"
          }
        ],
        "yAxes": [
          {"label": "Thread Count", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 10,
        "title": "Executor Queue & Completed Tasks",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "executor_queued_tasks{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Queued Tasks"
          },
          {
            "expr": "executor_completed_tasks_total{application=\"collections-kafka-challenge\"}",
            "legendFormat": "Completed Tasks"
          }
        ],
        "yAxes": [
          {"label": "Task Count", "min": 0},
          {"show": false}
        ]
      }
    ]
  }
}
